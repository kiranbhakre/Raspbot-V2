{
    "camera": {
        "device_id": 0,
        "width": 640,
        "height": 480,
        "fps": 30,
        "enable_servos": true
    },
    "servos": {
        "pan_center": 90,
        "tilt_center": 55,
        "pan_range": [
            0,
            180
        ],
        "tilt_range": [
            0,
            110
        ],
        "max_step": 5,
        "dead_zone": 0.1
    },
    "face_recognition": {
        "min_detection_confidence": 0.5,
        "recognition_threshold": 0.6,
        "database_path": "face_database.json",
        "enable_tracking": true
    },
    "gesture_recognition": {
        "max_num_hands": 2,
        "min_detection_confidence": 0.5,
        "min_tracking_confidence": 0.5,
        "enable_tracking": true
    },
    "object_3d_detection": {
        "default_object_type": "CUP",
        "max_num_objects": 5,
        "min_detection_confidence": 0.5,
        "min_tracking_confidence": 0.5,
        "enable_tracking": true
    },
    "robot_control": {
        "base_speed": 100,
        "turn_speed": 80,
        "face_following": {
            "target_face_width_ratio": 0.3,
            "dead_zone_ratio": 0.15
        }
    }
